@model RegisterModel
@{
    ViewData["index"] = 3;

    ViewData["Title"] = "Add New Admin";
}

<div class="container mt-5">

    <form asp-action="register" method="post" asp-controller="User" class="tm-content-row row" enctype="multipart/form-data">
        <div class="col-12 tm-block-col">
            <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
                <h2 class="tm-block-title">Create Admin and Staff Accounts</h2>
                <p class="text-white">Accounts</p>

                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <select asp-for="Role" class="custom-select">
                    <option value="">Select account</option>
                    <option value="Admin">Admin</option>
                    <option value="Staff">Staff</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>

            </div>
        </div>
        @*<div class="row tm-content-row">

        </div>*@
        <!-- row -->


        <div class="tm-block-col tm-col-avatar">

            <div class="tm-product-img-dummy mx-auto">
                <i class="fas fa-cloud-upload-alt tm-upload-icon"
                   onclick="document.getElementById('fileInput').click();"></i>
            </div>
            <div class="custom-file mt-3 mb-3">
                <input asp-for="Image" id="fileInput" class="validate" type="file" style="display:none;" required />
                <input type="button" class="btn btn-primary btn-block mx-auto" value="UPLOAD GUEST IMAGE" onclick="document.getElementById('fileInput').click();" />
                <span asp-validation-for="Image" class="text-danger"></span>

            </div>
        </div>

        <div class="tm-block-col tm-col-account-settings">
            <div class="tm-bg-primary-dark tm-block tm-block-settings">
                <h2 class="tm-block-title">Account Deatils</h2>
                <div class="tm-signup-form row">
                    <div class="form-group col-lg-6">
                        <label asp-for="Fullname">Account Name</label>
                        <input asp-for="Fullname" id="name"
                               name="fullname"
                               type="text"
                               class="form-control validate" />
                        <span asp-validation-for="Fullname" class="text-danger"></span>

                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="Email">Account Email</label>
                        <input asp-for="Email" id="email"
                               name="email"
                               type="email"
                               class="form-control validate" />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="PhoneNo">Phone</label>
                        <input asp-for="PhoneNo" id="phone"
                               name="phoneno"
                               type="tel"
                               class="form-control validate" />
                        <span asp-validation-for="PhoneNo" class="text-danger"></span>

                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="Address">Address</label>
                        <input asp-for="Address" id="phone"
                               name="address"
                               type="tel"
                               class="form-control validate" />
                        <span asp-validation-for="Address" class="text-danger"></span>

                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="Password" for="password">Password</label>
                        <input asp-for="Password" id="password"
                               name="password"
                               type="password"
                               class="form-control validate" />
                        <span asp-validation-for="Password" class="text-danger"></span>

                    </div>
                    <div class="col-12">
                        <button type="submit"
                                class="btn btn-primary btn-block text-uppercase">
                            Create Account
                        </button>
                    </div>
                </div>
            </div>
        </div>

        @*<div class="row tm-content-row">






        </div>*@

    </form>
       
</div>