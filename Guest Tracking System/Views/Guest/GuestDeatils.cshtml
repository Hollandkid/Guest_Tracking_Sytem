@model GuestDeatils
@{
    ViewData["index"] = 2;

    ViewData["Title"] = "GuestDeatils";
}


<div class="container mt-5">
   
    <!-- row -->
    <div class="row tm-content-row">
        <div class="tm-block-col tm-col-avatar">
            <div class="tm-bg-primary-dark tm-block tm-block-avatar">
                <h2 class="tm-block-title">Guest Avatar</h2>
                <div class="tm-avatar-container">
                    <img src="~/@Model.Image"
                         alt="@Model.Name"
                         class="tm-avatar img-fluid mb-4" />
                    @*<a href="#" class="tm-avatar-delete-link">
                        <i class="far fa-trash-alt tm-product-delete-icon"></i>
                    </a>*@
                </div>
                @*<button class="btn btn-primary btn-block text-uppercase">
                    Upload New Photo
                </button>*@
            </div>
        </div>
        <div class="tm-block-col tm-col-account-settings">
            <div class="tm-bg-primary-dark tm-block tm-block-settings">
                <h2 class="tm-block-title">Account Deatils</h2>
                <form action="" class="tm-signup-form row">
                    <div class="form-group col-lg-6">
                        <label asp-for="GuestIdNo">Guest Id Card Number</label>
                        <input asp-for="GuestIdNo" id="name"
                               name="guestNo"
                               type="text"
                               class="form-control validate text-warning" disabled />
                        <span asp-validation-for="GuestIdNo" class="text-danger"></span>

                    </div>


                    <div class="form-group col-lg-6">
                        <label asp-for="Sex">Address</label>
                        <input asp-for="Sex" id="phone"
                               name="sex"
                               type="text"
                               class="form-control validate text-warning" disabled />
                        <span asp-validation-for="Sex" class="text-danger"></span>

                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="Name">Account Name</label>
                        <input asp-for="Name" id="name"
                               name="name"
                               type="text"
                               class="form-control validate text-warning" disabled />
                        <span asp-validation-for="Name" class="text-danger"></span>

                    </div>
                    <div class="form-group col-lg-6">
                        <label asp-for="Email">Account Email</label>
                        <input asp-for="Email" id="email"
                               name="email"
                               type="email"
                               class="form-control validate text-warning" disabled />
                        <span asp-validation-for="Email" class="text-danger"></span>

                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="PhoneNo">Account Email</label>
                        <input asp-for="PhoneNo" id="email"
                               name="phone"
                               type="text"
                               class="form-control validate text-warning" disabled />
                        <span asp-validation-for="PhoneNo" class="text-danger"></span>

                    </div>

                    <div class="form-group col-lg-6">
                        <label asp-for="WhomtoSee">Phone</label>
                        <input asp-for="WhomtoSee" id="phone"
                               name="whomtosee"
                               type="text"
                               class="form-control validate text-warning" disabled />
                        <span asp-validation-for="WhomtoSee" class="text-danger"></span>

                    </div>

                    <div class="form-group col-lg-6">
                        <div class="form-group mb-3">
                            <label asp-for="Address">Address</label>
                            <textarea asp-for="Address" class="form-control validate text-warning"
                                      rows="3"
                                      required disabled></textarea>
                        </div>
                    </div>

                    <div class="form-group col-lg-6">
                        <div class="form-group mb-3">
                            <label asp-for="VisitPurpose">Description</label>
                            <textarea asp-for="VisitPurpose" class="form-control validate text-warning"
                                      rows="3"
                                      required disabled></textarea>
                        </div>
                    </div>

                        
                        

                        <div class="form-group mb-3 col-xs-12 col-sm-6">
                            <label asp-for="ArrivalTime">
                                Arrival Date
                            </label>
                            <input asp-for="ArrivalTime" id="expire_date"
                                   name="expire_date"
                                   type="text"
                                   class="form-control validate text-warning"
                                   data-large-mode="true" disabled />
                        </div>

                        <div class="form-group mb-3 col-xs-12 col-sm-6">
                            <label asp-for="DepartureTime" for="expire_date">
                                Departure Time
                            </label>
                            <input asp-for="DepartureTime" id="expire_date"
                                   name="expire_date"
                                   type="text"
                                   class="form-control validate text-warning"
                                   data-large-mode="true" disabled />
                        </div>

                </form>
            </div>
        </div>
    </div>
</div>